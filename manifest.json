    {
  "manifest_version": 3,
  "name": "Attention Heatmap ",
  "version": "1.0",
  "description": "Tracks user attention and overlays a heatmap on any webpage",

  "permissions": ["activeTab", "scripting"],

  "host_permissions": ["<all_urls>"],

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
